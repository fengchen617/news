<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="50dp">
    <TextView
        android:id="@+id/mine_tools_sc"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/mine_shoucang"
        android:text="收藏"
        android:gravity="center"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/mine_tools_ls"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/mine_lishi"
        android:text="历史"
        android:gravity="center"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/mine_tools_yj"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/mine_yejian"
        android:text="夜间"
        android:gravity="center"
        android:layout_height="match_parent"/>
</LinearLayout>